<div class="container" style='text-align: center;'>
<div class="row">
  <div class="col-sm-3">
  </div>
   <div class="col-sm-6">
      <%= form_for(resource, as: resource_name, html: {class: "text-center border border-light p-5"}, url: registration_path(resource_name)) do |f| %>
        <h2 class="h4 mb-4">Sign up</h2>
        <div class="field">
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: 'First Name:', class: "form-control mb-4" %>
        </div>

        <div class="field">
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: 'Last Name:', class: "form-control mb-4" %>
        </div>

        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email:', class: "form-control mb-4" %>
        </div>

        <div class="field">
          <% if @minimum_password_length %>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password:', class: "form-control mb-4" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirm Password:', class: "form-control mb-4" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: 'btn btn-info btn-block my-4' %>
        </div><br>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= render "devise/shared/links" %>

      <p>Already a member?
        <%= link_to 'Login', new_user_session_path %>
      </p>
      <% end %>


  </div>
<div class="col-sm-3">
  </div>
