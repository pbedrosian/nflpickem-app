<div class="row">
  <div class="col-sm-4">
    <h1> Weekly League Schedule </h1>
    <br>
    <%= form_tag schedule_path, method: :get do %>
      <p>
       <%= label_tag 'week:'%>
       <%= select_tag "week", options_from_collection_for_select(@weeks, "id", "id") %>
       <%= submit_tag "See Games", name: nil %>
     </p>
    <% end %>
    <br>
    <div class="column d-flex justify-content-center">
      <ul class="list-group">
       <% @games.each do |g| %>
         <li class="list-group-item"> <p><%= matchup g %></p> </li>
    <% end %>
  </div>
</div>