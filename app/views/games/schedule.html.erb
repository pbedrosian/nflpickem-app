<div class='body-container'>
  <div class="row">
    <div class="col-sm-12">
      <h1> Weekly League Schedule </h1>
      <br>
      <%= form_tag schedule_path, method: :get do %>
        <p>
        <%= label_tag 'week:'%>
        <%= select_tag "week", options_from_collection_for_select(@weeks, "id", "id") %>
        <%= submit_tag "See Games", name: nil %>
      </p>
      <% end %>
      <br>
      <table class="table" style="width:75%; text-align:center; margin: 0 auto; ">
        <thead class="thead-dark">
          <tr>
            <th>Date</th>
            <th>Home Team</th>
            <th></th>
            <th>Away Team</th>
          </tr>
        </thead>
        <tbody>
          <% @games.each do |g|%>
          <tr>
            <td><%= g.time%></td>
            <td><%= g.home_team.name%></td>
            <td> vs. </td>
            <td><%= g.away_team.name%></td>
          </tr>
          <%end%>
        </tbody>
      </table>
      </div>
  </div>
</div>