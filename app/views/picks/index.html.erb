<div class='body-container'>
<br>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Week</th>
      <th>Picked Team</th>
      <th></th>
      <th>Date Picked</th>
      <th>Outcome</th>
      <th>Buy In?</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @picks.each do |p|%>
    <tr>
      <td>Week <%= p.week.id%></td>
      <td><%= p.team.name %></td>
      <% if p.week == current_week %>
        <td style='font-size:12px;'><%= link_to 'Edit Pick', edit_user_pick_path(p.user, p)%> - <%= link_to 'Delete Pick', user_pick_path(p.user, p), method: :delete, data: { confirm: 'Are you sure?' }%></td>
      <%end%>
      <td><%= p.updated_at.localtime.strftime('%A, %B %dth')%></td>
      <td></td>
      <td><%= p.buy_in%></td>
    </tr>
    <%end%>
  </tbody>
</table>
</div>